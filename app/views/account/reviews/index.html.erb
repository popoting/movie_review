<div class="text-center">
	<h2>我的影评</h2>
	<hr>
	<div>
		<% @reviews.each do |review| %>
		<p>影评内容：<%= simple_format(review.comment) %></p>
		<p>发表时间：<%= review.created_at.to_s(:short) %></p>
		<%= link_to("编辑", edit_movie_review_path(review.movie, review), class: "btn btn-sm btn-default") %>
		<%= link_to("删除", movie_review_path(review.movie, review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-default") %>
		<% end %>
	</div>
</div>
