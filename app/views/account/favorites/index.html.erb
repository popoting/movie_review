<div class="movies-show">
<div class="text-center">
<h1>我收藏的影片</h1>
</div>
<hr>
<div class="row img-favorites">
	<% @movies.each do |movie| %>
	<div class="col-md-3 col-sm-4 col-xs-6"><%= (image_tag movie.image.url(:medium), class: 'image') %>
		<% if movie.user == current_user %>
		<div class="text-center">
			<h4><%= link_to(movie.title, movie_path(movie)) %></h4>
			<%= link_to edit_movie_path(movie), class: "btn btn-sm btn-default" do %><i class="fa fa-pencil-square-o" aria-hidden="true">编辑</i><% end %>
			<%= link_to movie_path(movie), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-default" do %><i class="fa fa-trash" aria-hidden="true">删除</i><% end %>
		</div>
		<% end %>
	</div>
<% end %>
</div>
</div>
